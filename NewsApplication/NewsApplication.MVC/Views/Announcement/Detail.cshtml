@model NewsApplication.Application.EntityCQ.Announcements.ViewModels.AnnouncementDetailViewModel

@{
    ViewBag.Title = "Ətraflı";
}

<div class="container">
    <div class="row">
        <div class="col-12 py-3">
            <div class="card" style="width: 100%;">
                @foreach (var file in Model.Files)
                {
                    <div class="w-50">
                        <img src="~/images/announcements/@file.Name" class="card-img-top py-3 img-fluid" alt="xeber">
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">
                        @Model.Description
                    </p>
                    <a href="#" class="btn btn-primary">
                        @Model.LikeCount
                        <i class="far fa-thumbs-up"></i>
                    </a>
                    <a href="#" class="btn btn-primary">
                        @Model.DislikeCount
                        <i class="far fa-thumbs-down"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-12">
            <h2>Şərhlər</h2>
        </div>
        
        @if (User.Identity.IsAuthenticated)
        {
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Şərh yaz</span>
                </div>
                <textarea class="form-control" aria-label="With textarea"></textarea>
            </div>
        }
        else
        {
            
            <div class="form-group py-3">
                <a class="btn btn-dark btn-block btn-rounded" asp-controller="Auth" asp-action="Login">
                    Şərh yazmaq üçün daxil ol
                </a>
            </div>
        }
        
        
        @if (Model.Comments is not null)
        {
            foreach (var comment in Model.Comments)
            {
                <div class="col-12 py-2">
                    <div class="card">
                        <div class="card-header">
                            @comment.UserName @comment.UserSurname
                        </div>
                        <div class="card-body">
                            <p class="card-text">@comment.Text</p>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>